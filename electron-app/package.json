{
	"name": "electron-app",
	"description": "Demonstrates spawning Express from Electron and using it to serve content or create an exe only for angular build",
	"version": "1.0.0",
	"main": "main.js",
	"author": {
		"name": "Angelo Manganiello",
		"email": "angelo.mang@libero.it"
	},
	"license": "GPL-3.0",
	"scripts": {
		"preconfig": "xcopy  \"../frontend-app/dist\"  \"dist\"  /s /Y /r /i /H /O ",
		"start": "electron .",
		"package": "build"
	},
	"build": {
		"productName": "electron-app",
		"directories": {
			"output": "distribution"
		},
		"win": {
			"icon": "icon.png",
			"target": [
				"portable"
			]
		},
		"mac": {
			"icon": "icon.png",
			"target": [
				"dmg"
			]
		},
		"linux": {
			"icon": "icon.png",
			"target": [
				"AppImage"
			]
		}
	},
	"devDependencies": {
		"electron": "1.8.2",
		"electron-builder": "20.15.1"
	},
	"dependencies": {
		"express": "4.16.2",
		"jquery": "3.3.1",
		"keymaster": "1.6.2",
		"lodash": "4.17.4",
		"request": "2.83.0"
	}
}
